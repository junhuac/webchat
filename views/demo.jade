extend layout
block titleContent
    | Demo Web Chat

block headcontent
    link(rel='stylesheet', href='/css/demo.css')
    script(type="text/javascript", src="/socket.io/socket.io.js")
    script(type="text/javascript", src="/js/socket-client.js")
    script(type="text/javascript", src="/js/webrtc-client.js")

block bodycontent
    input#nickName(type="hidden", value="#{nickName}")
    input#socketServer(type="hidden", value="#{socketServer}")
    div.container
        div.row
            div.offset2.span6.chatContainer
                div#textChatDIV.textChatContainer.hide
                    span
                        label#textChatTitle.titleLabel
                    span
                        div.chatInputDiv
                            input#chatInput.chatInput(type="text", placeholder="input message here") 
                    div.textChatHistoryContainer
                        ul#textChatHistory.textChatHistoryUL

                div#videoDIV.videoDIV.hide
                    hr.speratorhr
                    label#videoTitle
                    div.videoChatContainer
                        video#remoteView.remoteView(autoplay)
                        video#localView.localView(autoplay)
            div.span2
                div.currentUserContainer
                    label
                        span="You're "
                        span.currenUserName #{nickName}
                div.onlineUserContainer
                    div.onlineUserTitle
                        label online friends in the room
                    div.onlineUserULContainer
                        ul#onlineUserList.onlineUserUL

    script(type="text/javascript", src="/js/demo.js")

    div#tempate.hide
        li#onlineUserItemTemplate
            span.userName
                a(href="javascript:;")
            span.videoIcon
                a.hide(href="javascript:;")
                    i.icon-facetime-video
        li#chatHistoryItemTemplate
            span.msgSender
            span.msgSendTime
            div.msg
        
            